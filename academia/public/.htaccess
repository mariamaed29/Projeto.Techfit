RewriteEngine On

# Define o diretório base
RewriteBase 

# Permite acesso a arquivos reais (CSS, JS, imagens, HTML)
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Redireciona tudo para index.php exceto arquivos existentes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Força UTF-8
AddDefaultCharset UTF-8

# Desabilita listagem de diretórios
Options -Indexes

# Planos
/admin/planos → PlanoController::listar()
/admin/planos/novo → PlanoController::novo()
/admin/planos/criar → PlanoController::criar()
/admin/planos/editar?id=X → PlanoController::editarForm($id)
/admin/planos/salvar → PlanoController::editarSalvar()
/admin/planos/deletar?id=X → PlanoController::deletar($id)

# Produtos
/admin/produtos → ProductController::listar()
/admin/produtos/novo → ProductController::novo()
/admin/produtos/criar → ProductController::criar()
/admin/produtos/editar?id=X → ProductController::editarForm($id)
/admin/produtos/salvar → ProductController::editarSalvar()
/admin/produtos/deletar?id=X → ProductController::deletar($id)